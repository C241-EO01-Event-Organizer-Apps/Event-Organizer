<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.eventTenant.DetailEventTenant">

    <TextView
        android:id="@+id/Jdetail_tenant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:text="@string/detail_tenant"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />


    <LinearLayout
        android:id="@+id/con_tenant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/Jdetail_tenant"
        app:layout_constraintTop_toBottomOf="@+id/Jdetail_tenant">

    <TextView
        android:id="@+id/Jnama_tenant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="12dp"
        android:text="@string/nama_tenant"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/Jdetail_tenant"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <LinearLayout
        android:id="@+id/con_nama_tenant"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        android:background="@drawable/container_biru">

    <TextView
        android:id="@+id/nama_tenant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#083444"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        tools:text="Fulan" />
    </LinearLayout>

    <TextView
        android:id="@+id/Jkode_tenant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="12dp"
        android:text="@string/kode_tenant"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/nama_tenant"
        app:layout_constraintTop_toBottomOf="@+id/nama_tenant" />

    <LinearLayout
        android:id="@+id/con_kode_event"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        android:background="@drawable/container_biru">

    <TextView
        android:id="@+id/kode_tenant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#083444"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        tools:text="Fulan" />
    </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/Jdetail_event"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:text="@string/detail_event"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/con_tenant"
        app:layout_constraintTop_toBottomOf="@+id/con_tenant"
        tools:src="@tools:sample/avatars" />


    <LinearLayout
        android:id="@+id/con_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/Jdetail_event"
        app:layout_constraintTop_toBottomOf="@+id/Jdetail_event">

    <TextView
        android:id="@+id/Jnama_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="12dp"
        android:text="@string/nama_event"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/con_nama_event"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        android:background="@drawable/container_biru">

    <TextView
        android:id="@+id/nama_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/biru_tua_text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        tools:text="Fulan" />
    </LinearLayout>

    <TextView
        android:id="@+id/Jnama_organi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="12dp"
        android:text="@string/nama_organizer"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/con_nama_organi"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        android:background="@drawable/container_biru">

    <TextView
        android:id="@+id/nama_organi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#083444"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        tools:text="Fulan" />
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/con_total_pengunjung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/con_event"
        app:layout_constraintTop_toBottomOf="@+id/con_event"
        app:layout_goneMarginTop="10dp">

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/total_pengunjung" />

        <Button
            style="?attr/materialIconButtonStyle"
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_gravity="end"
            android:contentDescription="tombol refresh"
            app:iconSize ="26dp"
            app:icon="@drawable/ic_refresh" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/con_jumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/con_total_pengunjung"
        app:layout_constraintTop_toBottomOf="@+id/con_total_pengunjung"
        app:layout_goneMarginTop="10dp">

        <TextView
            android:id="@+id/jumlah_pengunjung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#083444"
            android:textSize="50sp"
            android:text="@string/J_0" />

        <Button
            android:id="@+id/btn_lihatDetail"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/btn_lihat_detail" />


    <LinearLayout
        android:id="@+id/con_qr"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/con_circle"
        app:layout_constraintStart_toStartOf="@+id/con_qr"
        app:layout_constraintTop_toBottomOf="@+id/con_qr"
        app:layout_goneMarginTop="10dp">

        <Button
            android:id="@+id/btn_qr"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:contentDescription="tombol scan"
            app:iconTint="@color/white"
            app:icon="@drawable/ic_qr_code"
            app:iconSize="70dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR Code"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>